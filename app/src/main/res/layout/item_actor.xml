<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/min_height"
    android:layout_marginStart="@dimen/material_margin_normal"
    android:background="@color/colorTransparent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_actor_image"
        android:layout_width="@dimen/dimens_50"
        android:layout_height="@dimen/dimens_50"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/circleImageView"
        />

    <TextView
        android:id="@+id/item_actor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/material_margin_normal"
        android:layout_below="@id/item_actor_image"
        />
</RelativeLayout>