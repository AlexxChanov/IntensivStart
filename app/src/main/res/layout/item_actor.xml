<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginStart="@dimen/material_margin_normal"
    android:background="@color/colorTransparent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_actor_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="center"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize30Percent"
        />
    <TextView
        android:id="@+id/item_actor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/material_margin_normal"
        android:layout_below="@id/item_actor_image"
        />
</RelativeLayout>